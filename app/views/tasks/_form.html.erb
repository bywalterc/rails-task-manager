<%= form_for(task) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control' %>
  </div>

  <div class="form-group completed">
    <p><%= f.check_box :complete %> Completed</p>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
