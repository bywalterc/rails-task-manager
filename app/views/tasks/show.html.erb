<h1><%= @task.title %></h1>
<div class="boxed">
  <p> <%=  @task.details %></p>
</div>
<% check = "" %>
<% @task.complete == true ? check = "☑︎ This task is completed" : check = "☐ This task needs to be completed" %>
<div class="task-list">
  <p> <%= check %></p>
</div>

<button type="button" class="btn btn-light btn-lg"><%= link_to "✍️ Edit task", task_edit_path(@task)  %></button>

<div class="bottom-link">
  <%= link_to "⟵ Back to list", tasks_path  %>
</div>
